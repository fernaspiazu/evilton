{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022", "ES6", "ES5"],
    "types": ["node"],
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "files": ["./.eslintrc.cjs"],
  "include": ["src/**/*.ts", "./*.d.ts", "./*.config.ts"],
  "exclude": [
    "node_modules"
  ]
}
